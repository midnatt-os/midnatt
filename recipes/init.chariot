source/init {
    url: "init"
    type: "local"
}

package/init {
    dependencies: [ source/init, image/clang, image/make ]
    build: <sh>
        cp -r $SOURCES_DIR/init/* .
        make init
    </sh>
    install: <sh>
        install -d $INSTALL_DIR$PREFIX/bin
        install init $INSTALL_DIR$PREFIX/bin
    </sh>
}

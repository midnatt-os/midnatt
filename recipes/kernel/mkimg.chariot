source/mkimg {
    url: "https://github.com/elysium-os/mkimg.git"
    revision: "884e5f5bfe7653fcc4f999a2347830f2fb34ebb4"
    type: "git"
}

tool/mkimg {
    dependencies: [ source/mkimg image/golang ]
    configure: <sh>
        cp $SOURCES_DIR/mkimg/go.mod $SOURCES_DIR/mkimg/go.sum $SOURCES_DIR/mkimg/main.go .
    </sh>
    build: <sh>
        go build
    </sh>
    install: <sh>
        install -D mkimg $INSTALL_DIR$PREFIX/bin/mkimg
    </sh>
}
